		<servlet-class>services.Connection</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Connection</servlet-name>
		<url-pattern>/connection</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Emprunt</servlet-name>
