	</servlet>
	
	<servlet-mapping>
		<servlet-name>Retourner</servlet-name>
		<url-pattern>/retourner</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Ajouter</servlet-name>
		<jsp-file>/ajouter.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
